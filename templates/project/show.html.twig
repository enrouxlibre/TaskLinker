{% extends 'base.html.twig' %}

{% block title %}{{ project.name }} - TaskLinker{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block header_title %}
    <div class="flex-header">
            <h1>{{ project.name }}</h1>
            <div class="user-list">
                {% for member in project.membres %}
                    <div class="avatar">
                        {{ (member.firstName|slice(0, 1) ~ member.lastName|slice(0, 1))|upper }}
                    </div>
                {% endfor %}
            </div>
            <a class="button" href="{{ path('project_edit', {id: project.id}) }}">Modifier</a>
    </div>
{% endblock %}

{% block body %}
            <div id="content">
                <div id="tasks-container">
                    {% for statusKey, bucket in tasksByStatus %}
                        <div class="task-column">
                            <h2>{{ bucket.label }}</h2>
                            <div class="tasks-list">
                                {% for task in bucket.items %}
                                    <a class="task" href="{{ path('task_edit', {id: task.id}) }}">
                                        <h3>{{ task.name }}</h3>
                                        <p>{{ task.description }}</p>
                                        <div class="task-infos">
                                            {% if task.date %}
                                                <div class="task-deadline">
                                                    <i class="fa-regular fa-calendar"></i> {{ task.date|date('d/m/Y') }}
                                                </div>
                                            {% endif %}
                                            {% if task.membre %}
                                                <div class="mini-user">
                                                    {{ (task.membre.firstName|slice(0, 1) ~ task.membre.lastName|slice(0, 1))|upper }}
                                                </div>
                                            {% endif %}
                                        </div>
                                    </a>
                                {% else %}
                                    <p>Aucune tâche.</p>
                                {% endfor %}
                                <a href="{{ path('task_new', {id: project.id, status: statusKey}) }}" class="task-add">
                                    + Ajouter une tâche
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
{% endblock %}
