{% extends 'base.html.twig' %}

{% block title %}{{ user.firstName }} {{ user.lastName }} - TaskLinker{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block header_title %}
    <h1>{{ user.firstName }} {{ user.lastName }}</h1>
{% endblock %}
{% block body %}
            <div id="content">
                {{ form_start(form, {'attr': {'name': 'employe'}}) }}
                    <div>
                        {{ form_label(form.lastName) }}
                        {{ form_widget(form.lastName) }}
                        {{ form_errors(form.lastName) }}
                    </div>
                    <div>
                        {{ form_label(form.firstName) }}
                        {{ form_widget(form.firstName) }}
                        {{ form_errors(form.firstName) }}
                    </div>
                    <div>
                        {{ form_label(form.email) }}
                        {{ form_widget(form.email) }}
                        {{ form_errors(form.email) }}
                    </div>
                    <div class="form-flex">
                        <div>
                            {{ form_label(form.joinDate) }}
                            {{ form_widget(form.joinDate) }}
                            {{ form_errors(form.joinDate) }}
                        </div>
                        <div>
                            {{ form_label(form.status) }}
                            {{ form_widget(form.status) }}
                            {{ form_errors(form.status) }}
                        </div>
                    </div>
                    <button class="button button-submit">Enregistrer</button>
                {{ form_end(form) }}
            </div>
{% endblock %}
